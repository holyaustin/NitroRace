{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "declaration": false,
    "lib": ["es2020"],
    "typeRoots": ["node_modules/@types"], // Optional, but ensures correct resolution
    "types": [
      "node",
      "mocha",
      "chai"
    ]
  },
  "include": [
    "scripts",
    "test",
    "hardhat.config.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}